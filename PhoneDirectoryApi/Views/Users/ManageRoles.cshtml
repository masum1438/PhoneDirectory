@model PhoneDirectoryApi.Models.ViewModels.ManageRolesViewModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles for @Model.Email</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Role</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>@Model.Roles[i].RoleName</td>
                    <td>
                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" />
                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Update Roles</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>